<% if current_user.liking?(micropost) %>
  <%= form_for(current_user.likerelations.find_by(micropost_id: micropost.id), html: { method: :delete }) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= f.submit 'いいね解除', class: 'btn btn-danger btn-sm' %>
  <% end %>
<% else %>
  <%= form_for(current_user.likerelations.build) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= f.submit 'いいね', class: 'btn btn-primary btn-sm' %>
  <% end %>
<% end %>
