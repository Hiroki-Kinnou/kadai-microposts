<% if logged_in? %>
  <div class="row">
    <aside class="col-sm-4">
      <%= form_with(model: @micropost, local: true) do |f| %>
        <div class="form-group">
          <%= f.text_area :content, class: 'form-control', rows: 5 %>
        </div>
        <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
      <% end %>
    </aside>
    <div class="col-sm-8">
      <%= render 'microposts/microposts', microposts: @microposts %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>ようこそ Micropostsへ!</h1>
      <%= link_to '新規登録へ!', signup_path, class: 'btn btn-lg btn-primary' %>
      <div style="margin: 30px;">
        <p>仮メールアドレス:user@example.jp</p>
        <p>パスワード:password</p>
        <p>ログインページにも記載!</p>
      </div>
    </div>
  </div>
<% end %>